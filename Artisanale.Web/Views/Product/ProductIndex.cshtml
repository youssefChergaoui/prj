@model IEnumerable<Artisanale.Web.Models.ProductDto>;


<div class="container p-4 border">

    <div class="col pb-2">
        <h1 class="">Products List</h1>

    </div>

    <div class="col text-end pt-1">
        <a asp-action="ProductCreate" class="btn btn-outline-primary ">Create product </a>

    </div>

    <table class="table">

        <thead>
            <tr>
                <th>
                    Name
                </th>

                <th>
                    Price
                </th>
                <th>Description</th> 
                <th>CategoryName</th>
                <th>
                    ImageUrl
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                


            <tr>
                    <td>
                        @item.Libelle
                    </td>
         
                    <td>
                        @item.Price
                    </td>
                    <td>@item.Description</td>
                    <td>@item.CategoryName</td>
                    <td>
                        @item.ImageUrl
                    </td>
                    <td>
                        <a asp-action="ProductEdit" class="btn btn-success " asp-route-ProductId="@item.ProductId">
                            <i class="fa-regular fa-pen-to-square"></i>

                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger " asp-route-ProductId="@item.ProductId">
                            <i class="fa-regular fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>


    </table>


</div>