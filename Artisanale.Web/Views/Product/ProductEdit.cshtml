@model Artisanale.Web.Models.ProductDto
<form asp-action="ProductEdit">
    <input asp-for="ProductId" hidden/>
    <div class="container border d-flex justify-content-center shadow p-3 mb-5 bg-body rounded  mb-3 p-3">
        <h1 class=" text-primary "> Edit Product </h1>

    </div>
    <div class="row  ">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div class="col-2">
            <label asp-for="Libelle" class="control-label pt-2" style="font-size:20px"></label>
        </div>
        <div class="col-10 pd3 mb-3">
            <input asp-for="Libelle" class="form-control" style="font-size:20px" />
            <span asp-validation-for="Libelle" class="text-danger"></span>

        </div>
        <div class="col-2">
            <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px"></label>
        </div>
        <div class="col-10 pd3 mb-3">
            <input asp-for="CategoryName" class="form-control" style="font-size:20px" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>

        </div>
        <div class="col-2">
            <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px"></label>
        </div>
        <div class="col-10 pd3 mb-3">
            <input asp-for="ImageUrl" class="form-control" style="font-size:20px" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>

        </div>
        <div class="col-2 ">
            <label asp-for="Price" class="control-label pt-2" style="font-size:20px"></label>
        </div>
        <div class="col-10 pd3 mb-3">
            <input asp-for="Price" class="form-control" style="font-size:20px" />
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>

        <div class="col-5  offset-2">
            <input type="submit" value="Update" class="btn btn-success form-control" />

        </div>
        <div class="col-5">
            <a asp-action="ProductIndex" class="btn-primary btn form-control">
                Back To List
            </a>
        </div>
    </div>

</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}